<div class="container" ng-app="VisitorCenter">
  <h1>Users</h1>

  <div ng-controller="usersController">
    <div class="well">
      <h3>Add a new User</h3>
      <form ng-submit="addUser()">
        <div class="row">
          <div class="col-xs-6">
            <input type="text" ng-model="newUser.first_name" class="form-control" placeholder="First Name" />
          </div>
          <div class="col-xs-6">
            <input type="text" ng-model="newUser.last_name" class="form-control" placeholder="Last Name" />
          </div>
        </div>
        <div class="row">
          <div class="col-xs-6">
            <br />
            <input type="text" ng-model="newUser.email" class="form-control" placeholder="Email" />
          </div>
          <div class="col-xs-6">
            <br />
            <input type="text" ng-model="newUser.phone_no" class="form-control" placeholder="Phone No" />
          </div>
        </div>
        <div class="row">
          <div class="col-xs-12 text-center">
            <br />
            <input type="Submit" value="Add user" class="btn btn-primary" />
          </div>
        </div>
      </form>
    </div>

    <h3>Currently Users</h3>
    <hr />
    <table class="table table-bordered table-striped">
      <thead>
        <tr>
          <th>First Name</th>
          <th>Last Name</th>
          <th>Email</th>
          <th>Phone No</th>
          <th>&nbsp;</th>
        </tr>
      </thead>
      <tbody>
        <tr ng-show="!users.length">
          <td colspan="4">No found.</td>
        </tr>
        <tr ng-repeat="user in users">
          <td>{{ user.first_name }}</td>
          <td>{{ user.last_name }}</td>
          <td>{{ user.email }}</td>
          <td>{{ user.phone_no }}</td>
          <td><a class="btn btn-danger" ng-click="deleteUser($index)">Remove</a></td>
        </tr>
      </tbody>
    </table>

  </div>
</div>